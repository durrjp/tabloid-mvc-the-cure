@model TabloidMVC.Models.ViewModels.TagIndexViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Tags</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Check or Uncheck
                            </th>
                            <th>
                                Tag
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TagsOnPost)
                        {
                            <tr>
                                <td>
                                    <input asp-for="@item.Selected" type="checkbox" checked="@item.Selected" value="@item.Id" name="AreChecked"/>
                                    @*<input name="AreChecked" type="hidden" value="false" />*@
                                </td>
                                <td>
                                    @item.Name
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Post" asp-action="Details"asp-route-id="@Model.Post.Id">Back to Post</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
