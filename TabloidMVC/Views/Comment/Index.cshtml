@model TabloidMVC.Models.ViewModels.CommentIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container pt-5">

    <h1>Comments</h1>

    <p>
        <a class="btn btn-primary" asp-controller="Comment" asp-route-id="@Model.Post.Id" asp-action="Create">New Comment</a>
    </p>

    <table class="table">
            <thead>
                <tr>
                    <th>
                        Subject
                    </th>
                    <th>
                        Comment
                    </th>
                    <th>
                        Date
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model.PostComments)
                {
                    <tr>
                        <td>
                            @item.Subject 
                        </td>
                        <td>
                            @item.Content
                        </td>
                        <td>
                            @item.CreateDateTime
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id, postId = @Model.Post.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id, postId = @Model.Post.Id })
                        </td>
                    </tr>
                }
            </tbody>
    </table>
</div>